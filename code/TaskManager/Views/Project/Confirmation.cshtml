@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/Project/projectBoard.css" />

<div style="text-align:center">
	<h2>Confirm Task Move</h2>

	<p>Warning: The current assigned employee is not part of the assigned group, moving this task to the new stage will remove them from the task. Do you want to continue?</p>

	<form asp-controller="Project" asp-action="MoveTask" method="post">
		@Html.AntiForgeryToken()
		<input type="hidden" name="taskId" value="@ViewBag.TaskId" />
		<input type="hidden" name="currentStageId" value="@ViewBag.CurrentStageId" />
		<input type="hidden" name="newStageId" value="@ViewBag.NewStageId" />
		<input type="hidden" name="projectId" value="@ViewBag.ProjectId" />
		<input type="hidden" name="confirmed" value="true" />
    
		<button type="submit" class="btn btn-sm btn-danger">Yes, Move Task</button>
		<a href="@Url.Action("ProjectBoard", "Project", new { id = ViewBag.ProjectId })" class="btn btn-sm btn-secondary">Cancel</a>
	</form>
</div>