@model IEnumerable<TaskManagerWebsite.Models.Project>

<h2>Projects</h2>

<a href="@Url.Action("CreateProject", "Manager")" class="btn btn-primary">Create New Project</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Project Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var project in Model.OrderBy(p => p.Name)) // Sort projects by name
    {
        <tr>
            <td>@project.Name</td>
            <td>
                <a href="@Url.Action("ProjectDetails", "Manager", new { id = project.Id })" class="btn btn-info btn-sm">View</a>
                
                    @if (project.ProjectCreatorId == int.Parse(ViewBag.UserId))
                    {
                        <form asp-action="DeleteProject" asp-controller="Manager" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@project.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this project?');">Delete</button>
                        </form>
                    }
            </td>
        </tr>
    }
    </tbody>
</table>