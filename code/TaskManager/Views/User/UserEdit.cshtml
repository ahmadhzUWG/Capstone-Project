@model User

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/css/main.css" asp-append-version="true" />

<div class="tm-container">
    <h2 class="tm-header__title">Edit User</h2>
    <form asp-action="UserEdit" asp-controller="User" method="post" class="tm-form">
        <input type="hidden" asp-for="Id" />

        <div class="tm-form__group">
            <label asp-for="UserName" class="tm-form__label">Username</label>
            <input asp-for="UserName" class="tm-form__input" />
        </div>

        <div class="tm-form__group">
            <label asp-for="Email" class="tm-form__label">Email</label>
            <input asp-for="Email" class="tm-form__input" />
        </div>

        <div class="tm-form__group">
            <label class="tm-form__label">Role</label>
            <select name="Role" class="tm-form__input">
                @foreach (var role in ViewBag.Roles)
                {
                    <option value="@role" selected="@(role == ViewBag.CurrentRole ? "selected" : null)">
                        @role
                    </option>
                }
            </select>
        </div>

        <div class="tm-form__actions">
            <button type="submit" class="tm-btn tm-btn--success">Save Changes</button>
            <a asp-action="Users" class="tm-btn tm-btn--secondary">Cancel</a>
        </div>
    </form>
</div>